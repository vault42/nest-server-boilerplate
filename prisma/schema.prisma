generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role    Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // articles Article[]
}

enum Role {
  USER
  ADMIN
}

model Article {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String?
  body        String
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
